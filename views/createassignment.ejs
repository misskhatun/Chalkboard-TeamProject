<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../CSS/header.css" />
    <link rel="stylesheet" href="../CSS/createassignment.css" />
    <script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
    <script src="/JS/createassignment.js"></script>
    <title>Create Assignment</title>
  </head>
  <body>
    <header>
    <%- include('./partials/header') %>
    </header>
    <img class="pic" src="/img/chalkboard-logos_white.png" alt="logo">
    
    <main>
      <form action="/createassignment" method="POST">
        <div class="labelinput">
          <label for="inputcourseid">For Course:</label>
          <input type="text" id="inputcourseid" name="inputcourseid" placeholder="Course ID" required />
        </div>

        <div class="labelinput">
          <label for="inputassignmenttitle">Assignment Title:</label>
          <input
            type="text"
            id="inputassignmenttitle"
            name="inputassignmenttitle"
            placeholder="Assignment Title"
            required
          />
        </div>

        <div class="labelinput">
          <label for="inputdesc">Description:</label>
          <textarea id="inputdesc" name="inputdesc" rows="7" cols="80" required></textarea>
        </div>

        <div id="container">
          <div class="questionform">
            <div class="labelinput">
              <label for="inputquestion">Question / Problem:</label>
              <textarea class="inputquestion" name="inputquestion" rows="7" cols="80" required></textarea>
            </div>

            <div class="labelinput">
              <label for="inputanswer">Answer (Instructor only):</label>
              <input type="text" class="inputanswer" name="inputanswer" required />
            </div>

          </div>
        </div>
        
        <input type="button" class="deletebutton" value="Delete Question" />
        <input type="button" id="buttonaddquestion" class="button" value="Add Question" />

        <div class="labelinput">
          <label for="duedate">Due Date (optional):</label>
          <input type="date" id="duedate" name="duedate" />
        </div>

        <input type="submit" class="button" value="Create Assignment" />
      </form>
      <img src="/img/teaching.jpeg" src="pic" class="asspic">
    </main>
  </body>
</html>
