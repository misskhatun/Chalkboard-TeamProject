<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../CSS/editcourse.css" />
    <link rel="stylesheet" href="../CSS/header.css" />
    <script src="../JS/editcourse.js" defer></script>
    <title>Edit Course</title>
  </head>
  <body>
    <header>
    <%- include('./partials/header') %>
    </header>
    <img class="pic" src="/img/chalkboard-logos_white.png" alt="logo">
    <form action="/editcourse" id="editform" method="POST">
      <h1>Edit Course</h1>
      <ul class="no-bullets">
        <% data.forEach((course) => { %>
          <li>
            <input type="radio" id=<%=course.id%> name="coursechoice" value=<%=course.id%> required />
            <label for=<%=course.id%> class="courselabels"><%= course.coursename %></label>
          </li>
        <% }) %>
      </ul>

      <div class="buttons">
        <input type="submit" id="editbtt" name="bttn" value="Edit" />
        <input type="submit" id="deletebtt" name="bttn" value="Delete" />
      </div>
    </form>
  </body>
</html>
